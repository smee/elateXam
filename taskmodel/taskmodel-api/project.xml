<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../project-info.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>taskmodel-api</artifactId>
    <organization />
    <groupId>elate</groupId>
    <name>The taskmodel API for eTesting</name>
    <package>de.thorstenberger.taskmodel</package>
    <currentVersion>${elatePortal.version}</currentVersion>
    <repository />
    <dependencies>
    
    	<!--  not really necessary -->
	    <dependency>
	      <groupId>commons-logging</groupId>
	      <artifactId>commons-logging</artifactId>
	      <version>1.0.4</version>
	      <type>jar</type>
	    </dependency>


	</dependencies>    
    <build>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
        </resources>
        <unitTestSourceDirectory>src</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/Test*.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <excludes>
                        <exclude>**/*.java</exclude>
                    </excludes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
    </build>
    <reports>
        <report>maven-javadoc-plugin</report>
    </reports>
</project>